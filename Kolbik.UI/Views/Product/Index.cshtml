@model IEnumerable<Kolbik.Domain.Entities.Book>

@{
    ViewData["Title"] = "Книги";
    var request = ViewContext.HttpContext.Request;
    var authors = ViewData["Authors"] as IEnumerable<Author>;
    string? author = request.Query["author"].ToString();
}

<h1>Книги</h1>

@* Выбор категории по авторам *@
<div class="row">
    <div class="col-2 border-2">
        <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle"
               data-bs-toggle="dropdown"
               href="#"
               role="button"
               aria-expanded="false">
                @ViewData["CurrentAuthor"]
            </a>
            <ul class="dropdown-menu">
                <li>
                    <a class="dropdown-item"
                       asp-controller="Product"
                       asp-route-author=@null>Все</a>
                </li>
                @foreach (var item in authors)
                {
                    <li>
                        <a class="dropdown-item"
                           asp-controller="Product"
                           asp-route-author="@item.Nickname">
                            @item.Nickname
                        </a>
                    </li>
                }
            </ul>
        </li>
        </ul>
    </div>
</div>


@* Вывод списка на экран *@
<div class="row row-cols-3 row-cols-md-3 g-4">
@foreach (var item in Model)
{   
    <div class="col">
        <div class="card">
                <img src="@item.Image" class="card-img-top mx-auto d-block" style="width: 250px; height: 250px; object-fit: cover;" alt="Обложка книги: @item.Name">
                <div class="card-body">
                    <h5 class="card-title">@item.Name</h5>
                    <p class="card-text">@item.Author.Nickname</p>
                    <p class="card-text">@item.Description</p>
                    <p class="card-text">Рейтинг: @item.Rating</p>
                    <div class="mt-auto">
                        <button class="btn btn-primary w-100 d-flex align-items-center justify-content-center">
                            <i class="bi bi-cart-plus me-2"></i>
                            <span>Добавить в корзину</span>
                        </button>
                    </div>
                </div>
        </div>
    </div>
}
</div>















@page 
@model Kolbik.UI.Areas.Admin.Pages.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Администрирование</h1>

@* Вывод списка на экран *@
<div class="row row-cols-3 row-cols-md-3 g-4">
    @foreach (var item in Model.Book)
    {
        <div class="col">
            <div class="card">
                <img src="@item.Image" class="card-img-top mx-auto d-block" style="width: 250px; height: 250px; object-fit: cover;" alt="Обложка книги: @item.Name">
                <div class="card-body">
                    <h5 class="card-title">@item.Name</h5>
                    <p class="card-text">@item.Author.Nickname</p>
                    <p class="card-text">@item.Description</p>
                    <p class="card-text">Рейтинг: @item.Rating</p>
                    <div class="btn-group mx-auto d-table" role="group">
                        <!-- Кнопка Details (Просмотр) -->
                        <a asp-page="./Details" asp-route-id="@item.Id"
                           class="btn btn-outline-info btn-sm">
                            <i class="bi bi-eye"></i>
                            <span class="d-none d-md-inline"> Подробнее</span>
                        </a>

                        <!-- Кнопка Edit (Редактировать) -->
                        <a asp-page="./Edit" asp-route-id="@item.Id"
                           class="btn btn-outline-primary btn-sm">
                            <i class="bi bi-pencil"></i>
                            <span class="d-none d-md-inline"> Редактировать</span>
                        </a>

                        <!-- Кнопка Delete (Удалить) -->
                        <a asp-page="./Delete" asp-route-id="@item.Id"
                           class="btn btn-outline-danger btn-sm">
                            <i class="bi bi-trash"></i>
                            <span class="d-none d-md-inline"> Удалить</span>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>








